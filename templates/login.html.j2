{% set this_page = "login" %}
{% extends "layout.html.j2" %}

{% block title %}Přihlášení | MeshInfo{% endblock %}

{% block content %}
<div class="mt-5 d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow-lg" style="width: 350px;">
        <h3 class="text-center mb-4">Přihlášení</h3>
        <form action="login.html" method="POST">            
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Heslo</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Přihlásit</button>
            <div class="mt-2"><a href="{{ url_for("register") }}" class="btn btn-info w-100" role="button">Registrace</a></div>
        </form>
    </div>
</div>
{% endblock %}